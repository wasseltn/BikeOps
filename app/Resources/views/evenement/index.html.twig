{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evenements list</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lieu</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Nbplace</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Nom</th>
                <th>Formateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td><a href="{{ path('evenement_show', { 'id': evenement.id }) }}">{{ evenement.id }}</a></td>
                <td>{{ evenement.lieu }}</td>
                <td>{% if evenement.dateDebut %}{{ evenement.dateDebut|date('Y-m-d') }}{% endif %}</td>
                <td>{% if evenement.dateFin %}{{ evenement.dateFin|date('Y-m-d') }}{% endif %}</td>
                <td>{{ evenement.nbPlace }}</td>
                <td>{{ evenement.prix }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.name }}</td>
                <td>{{ evenement.formateur.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('evenement_show', { 'id': evenement.id }) }}"><BUTTON CLASS="btn btn-info">show</BUTTON></a>
                        </li>
                        <li>
                            <a href="{{ path('evenement_edit', { 'id': evenement.id }) }}"><BUTTON CLASS="btn btn-danger">edit</BUTTON></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('evenement_new') }}"><BUTTON CLASS="btn btn-warning">Create a new evenement</BUTTON></a>
        </li>

        <li>
            <a href="{{ path('evenement_calendrier') }}"><BUTTON CLASS="btn btn-dark">Calendar</BUTTON></a>
        </li>
    </ul>
{% endblock %}
