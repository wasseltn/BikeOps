{% extends 'base.html.twig' %}

{% block body %}
    <h1>Livraison</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livraison.id }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{% if livraison.etat %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ livraison.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ livraison.ville }}</td>
            </tr>
            <tr>
                <th>Livreur</th>
                <td>{{ livraison.livreurId.nom }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ livraison.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('livraison_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('livraison_edit', { 'id': livraison.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
